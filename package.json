{
  "name": "SirMary",
  "version": "1.0.0",
  "description": "An SPA built on Nuxt and Contentful",
  "author": "Nick Niles <nick@nickniles.com>",
  "private": true,
  "dependencies": {
    "bad-words": "^1.5.1",
    "contentful": "^4.6.0",
    "contentful-management": "^3.4.0",
    "node-sass": "^4.5.3",
    "normalize-scss": "^7.0.0",
    "normalize.css": "^7.0.0",
    "nuxt": "latest",
    "pug": "^2.0.0-rc.3",
    "pug-loader": "^2.3.0",
    "sass-loader": "^6.0.6",
    "sass-mq": "^3.3.2",
    "vue-awesomplete": "^0.1.8",
    "vue-markdown": "^2.1.3",
    "vuex": "^2.3.1"
  },
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
